<div id="login-form" class="row form-bg mx-auto justify-content-center">
  <h3 class="text-center">Login</h3>
  <form class="login-form row justify-content-center">
    <div class="row">
      <label for="email-login">Email:</label>
      <input type="text" id="email-login" />
    </div>
    <div class="row">
      <label for="password-login">Password:</label>
      <input type="password" id="password-login" />
    </div>
    <div>
      <button
        class="btn btn-primary mx-auto d-block"
        type="submit"
      >Login</button>
      <p id="goSignup" style="cursor: pointer;">I don't have an account</p>
    </div>
  </form>
</div>
<div id="signup-form" class="row form-bg mx-auto justify-content-center">
  <h3 class="text-center">Sign up</h3>
  <form class="signup-form row justify-content-center">
    <div class="row">
      <label for="username-signup">Username:</label>
      <input type="text" id="username-signup" />
    </div>
    <div class="row">
      <label for="email-signup">Email:</label>
      <input type="text" id="email-signup" />
    </div>
    <div class="row">
      <label for="password-signup">Password:</label>
      <input type="password" id="password-signup" />
    </div>
    <div>
      <button
        class="btn btn-primary mx-auto d-block"
        type="submit"
      >Signup</button>
      <p id="goLogin" style="cursor: pointer;">I already have an account</p>
    </div>
  </form>
</div>
<script src="/javascript/auth.js"></script>